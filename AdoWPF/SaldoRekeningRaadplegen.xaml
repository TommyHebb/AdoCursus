<Window x:Class="AdoWPF.SaldoRekeningRaadplegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdoWPF"
        mc:Ignorable="d"
        Title="SaldoRekeningRaadplegen" Height="300" Width="300">
    <Grid>
        <Label Content="Rekeningnummer:" Width="110" Height="30" Margin="40,60,0,0"
               HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
        <TextBox Name="textBoxRekeningNr" Width="110" Height="30" Margin="160,60,0,0"
                 HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
        <Button Name="buttonSaldo" Content="Saldo" Width="110" Height="30" Margin="160,120,0,0"
                HorizontalAlignment="Left" VerticalAlignment="Top" Click="buttonSaldo_Click"></Button>
        <Label Name="labelStatus" Content="" Width="230" Height="30" Margin="40,180,0,0"
               HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Right"></Label>
    </Grid>
</Window>
